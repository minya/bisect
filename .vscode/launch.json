{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug bisect",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bisect",
            "args": [
                "-t", "2025-06-02 11:55:34",
                "-V",
                "sample.log"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
